<mvc:View controllerName="bootcamptodolist.controller.Home" xmlns:html="http://www.w3.org/1999/xhtml" xmlns:mvc="sap.ui.core.mvc"
	displayBlock="true" xmlns="sap.m">
	<App>
		<pages>
			<Page title="{i18n>title}">
				<content>
					<!-- Used to test events -->
					<Button text="Press Me" press="onPressButton"/>
					<!-- Used to test binding modes -->
					<Input type="Text" value="{sampleModel>/description}"/>
					<Text text="{sampleModel>/description}"/>
					<List items="{todo>/}">
						<items>
							<StandardListItem title="{todo>task}"
								description="{ parts: ['i18n>todoDescription', 'todo>description'], formatter:'jQuery.sap.formatMessage' }"
								info="{ path:'todo>status', formatter:'.formatter.fnFormatStatus' }"/>
						</items>
					</List>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>